generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String     @id @default(uuid())
  email       String     @unique
  password    String
  createdAt   DateTime   @default(now())
  
  // Settings
  delayMs     Int        @default(1500) // Base delay
  concurrency Int        @default(1)

  // Relations
  messages    Message[]
  campaigns   Campaign[]

  // WhatsApp Connectivity State (For Vercel Persistence)
  waStatus    String   @default("DISCONNECTED") 
  waQrCode    String?  @db.Text
}

model Campaign {
  id          String    @id @default(uuid())
  name        String
  status      String    @default("DRAFT") // DRAFT, PROCESSING, COMPLETED, PAUSED
  messageTemplate String
  
  // Frequency Settings
  minDelay    Int       @default(2000)
  maxDelay    Int       @default(5000)

  userId      String
  user        User      @relation(fields: [userId], references: [id])
  
  contacts    CampaignContact[]
  createdAt   DateTime  @default(now())
}

model CampaignContact {
  id          String    @id @default(uuid())
  phone       String
  status      String    @default("PENDING") // PENDING, SENT, FAILED
  campaignId  String
  campaign    Campaign  @relation(fields: [campaignId], references: [id])
  
  messageId   String?   // Link to the actual message log if sent
  
  // Conversational AI State
  conversationStage Int      @default(0) // 0: Init, 1: Sent Greeting 1, 2: Sent Greeting 2, 3: Sent Payload, 4: Handover
  history         Json?     // Stores array of { role, content }
  lastInteraction DateTime?
}

model Message {
  id        String   @id @default(uuid())
  to        String
  body      String
  status    String   @default("queued")
  sid       String?
  error     String?
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
